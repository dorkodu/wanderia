{
  "name": "@trekie/api",
  "private": true,
  "type": "module",
  "module": "src/index.ts",
  "scripts": {
    "dev": "bun --watch src/index.ts --port",
    "build": "bun build src/index.ts --target bun --outdir ./dist",
    "start": "NODE_ENV=production bun dist/index.js",
    "test": "bun test",
    "auth:generate": "npx @better-auth/cli@latest generate --output=src/namespaces/auth/schemas/db.ts",
    "db:migrate": "bun drizzle-kit generate && bun drizzle-kit migrate && bun drizzle-kit push"
  },
  "dependencies": {
    "@better-auth/cli": "^1.3.3",
    "@elysiajs/cors": "^1.3.3",
    "@elysiajs/trpc": "^1.1.0",
    "@elysiajs/websocket": "^0.2.8",
    "@langchain/core": "^0.3.66",
    "@langchain/langgraph": "^0.2.74",
    "@tanstack/react-query": "^5.83.0",
    "@tanstack/react-query-devtools": "^5.83.0",
    "@trpc/client": "^11.4.3",
    "@trpc/react-query": "^11.4.3",
    "@trpc/server": "^11.4.3",
    "better-auth": "^1.3.3",
    "dotenv": "^16.6.1",
    "drizzle-orm": "^0.42.0",
    "drizzle-zod": "^0.8.2",
    "elysia": "^1.3.5",
    "js-xxhash": "^4.0.0",
    "langchain": "^0.3.30",
    "nanoid": "^5.1.5",
    "neverthrow": "^8.2.0",
    "nodemailer": "^6.10.1",
    "pg": "^8.16.3",
    "ulidx": "^2.4.1",
    "zod": "^3.25.76"
  },
  "peerDependencies": {
    "typescript": "^5.8.3"
  },
  "devDependencies": {
    "@types/bun": "^1.2.19",
    "@types/cookie-parser": "^1.4.9",
    "@types/nodemailer": "^6.4.17",
    "@types/pg": "^8.15.4",
    "drizzle-kit": "^0.31.4",
    "eslint-plugin-neverthrow": "^1.1.4",
    "tsx": "^4.20.3"
  },
  "publishConfig": {
    "access": "restricted"
  }
}
